<form asp-controller="Login" asp-action="Submit">
    <div class="container">
        <div class="row mt-2">
            <div class="col">
                <h2>Login</h2>
                Please enter your Username and Password...
            </div>
        </div>

        <div class="row">
            <div class="col mt-2">
                <div class="form-group">
                    <label for="txtUserName">Username:</label>
                    <input type="text" name="myUsername" class="form-control" Maxlength="30" style="width:450px;max-width:450px;" />
                </div>
                <div class="form-group">
                    <label for="txtPassword">Password:</label>
                    <input type="password" name="myPassword" class="form-control" maxlength="30" style="width:450px;max-width:450px;" />
                </div>
                <div class="form-group">
                    <input type="submit" text="Submit" class="btn btn-warning" />
                    <span class="text-warning" style="margin-left:5px;">@ViewData["feedback"]</span>
                </div>
            </div>
        </div>
    </div>
</form>